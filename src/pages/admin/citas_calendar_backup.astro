  function initCalendar() {
    const calendarEl = document.getElementById('calendar');
    if (!calendarEl) return;
    const rawAppointments = appData ? JSON.parse(appData.dataset.appointments || '[]') : [];

    const getStatusStyle = (status: string) => {
        switch(status) {
            case 'confirmed': return { border: 'border-brand-600', bg: 'bg-brand-50', text: 'text-brand-800' };
            case 'pending': return { border: 'border-orange-400', bg: 'bg-orange-50', text: 'text-orange-800' };
            case 'completed': return { border: 'border-emerald-500', bg: 'bg-emerald-50', text: 'text-emerald-800' };
            case 'cancelled': return { border: 'border-red-400', bg: 'bg-red-50', text: 'text-red-800' };
            default: return { border: 'border-gray-400', bg: 'bg-gray-50', text: 'text-gray-800' };
        }
    };

    const events = rawAppointments.map((apt: any) => {
        const durationMin = apt.services?.duration || 30;
        const start = new Date(`${apt.appointment_date}T${apt.appointment_time}`);
        const end = new Date(start.getTime() + durationMin * 60000);
        const rawName = apt.dentists?.name || '';
        const cleanName = rawName.replace(/^(Dr\.|Dra\.|Dr|Dra)\s+/i, '');
        const firstName = cleanName.split(' ')[0];
        const dentistDisplay = rawName ? `Dr. ${firstName}` : 'Sin asignar';
        
        return {
            id: apt.id,
            title: apt.customer_name,
            start: start,
            end: end,
            extendedProps: {
                dentistId: apt.dentist_id,
                status: apt.status,
                customerName: apt.customer_name,
                phone: apt.customer_phone,
                dentistName: dentistDisplay,
                serviceName: apt.services?.name || 'Consulta',
                appointmentDate: apt.appointment_date,
                appointmentTime: apt.appointment_time
            }
        };
    });

    const isMobile = window.innerWidth < 768;

    // @ts-ignore
    calendarInstance = new FullCalendar.Calendar(calendarEl, {
        initialView: isMobile ? 'timeGridDay' : 'timeGridWeek',
        
        // üî• HEADER FIJO: 3 Bloques para que el CSS Grid los ubique
        headerToolbar: { 
            left: 'prev,datePickerBtn,next',  // Bloque 1 (CSS lo pone abajo a la izq)
            center: 'title',                 // Bloque 2 (CSS lo pone ARRIBA y expandido)
            right: 'dayGridMonth,timeGridWeek,timeGridDay' // Bloque 3 (CSS lo pone abajo a la der)
        },
        
        // Formatos de t√≠tulo con nombre completo del mes
        views: {
            dayGridMonth: { titleFormat: { year: 'numeric', month: 'long' } }, 
            timeGridWeek: { titleFormat: { year: 'numeric', month: 'short', day: 'numeric' } },
            timeGridDay: { titleFormat: { weekday: 'long', day: 'numeric', month: 'long' } }
        },
        
        customButtons: {
            datePickerBtn: {
                text: 'üìÖ',
                click: function() {
                    if(dateNavigatorInput) {
                        if(dateNavigatorInput.showPicker) dateNavigatorInput.showPicker();
                        else dateNavigatorInput.click();
                    }
                }
            }
        },
        
        locale: 'es',
        firstDay: 1,
        slotMinTime: '06:00:00',
        slotMaxTime: '21:00:00',
        allDaySlot: false,
        height: 'auto',
        slotDuration: '00:15:00',
        events: events,
        nowIndicator: true,
        editable: true,
        selectable: true,
        selectMirror: true,
        
        eventContent: function(arg: any) {
            const props = arg.event.extendedProps;
            let style = getStatusStyle(props.status);
            const timeString = arg.timeText.replace(' - ', '-');
            const isTimeGrid = arg.view.type === 'timeGridWeek' || arg.view.type === 'timeGridDay';

            if (isTimeGrid && props.status === 'confirmed') {
                style.bg = 'bg-brand-600 shadow-md'; style.text = 'text-white'; style.border = 'border-brand-700';
            }
            
            return { html: `
                <div class="h-full w-full rounded-md border-l-[3px] ${style.border} ${style.bg} pl-2 pr-1 py-1 flex flex-col justify-start overflow-hidden hover:brightness-110 transition-all cursor-move shadow-sm">
                    <div class="flex items-center justify-between gap-1 mb-0.5">
                        <span class="text-[9px] font-bold ${style.text} opacity-90">${timeString}</span>
                    </div>
                    <div class="font-bold text-xs ${style.text} leading-tight truncate mb-0.5">${arg.event.title}</div>
                    <div class="text-[10px] ${style.text} opacity-80 truncate">ü¶∑ ${props.serviceName}</div>
                    ${!isMobile ? `<div class="mt-auto pt-1 flex items-center gap-1 ${style.text} opacity-80 text-[10px]"><span class="truncate">${props.dentistName}</span></div>` : ''}
                </div>
