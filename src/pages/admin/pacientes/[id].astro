  function detectProblems() {
      const problems = [];
      
      // Configuraci√≥n: Qu√© buscar en tus servicios seg√∫n el hallazgo
      const logic = {
          'caries': { search: 'Resina', defaultCost: 80, priority: 'urgent', text: 'Caries detectada' },
          'corona': { search: 'Corona', defaultCost: 350, priority: 'normal', text: 'Reemplazo Corona' },
          'ausente': { search: 'Implante', defaultCost: 800, priority: 'normal', text: 'Diente Ausente' },
          'endodoncia': { search: 'Endodoncia', defaultCost: 200, priority: 'urgent', text: 'Tratamiento conducto' }
      };

      Object.keys(mouthState).forEach(key => {
          const status = mouthState[key];
          const tooth = key.split('_')[0];
          const rule = logic[status];
          
          if (rule) {
              // Buscar precio real en la lista de servicios del negocio
              const realService = services.find((s:any) => s.name.toLowerCase().includes(rule.search.toLowerCase()));
              
              problems.push({ 
                  tooth, 
                  issue: rule.text, 
                  priority: rule.priority, 
