    if (selectedDate < today) {
      showError(dateField, "La fecha no puede ser anterior a hoy");
      return false;
    }
    clearError(dateField);
    return true;
  }

  function validateForm(): boolean {
    let isValid = true;

    const nameField = document.getElementById("name") as HTMLInputElement;
    if (!validateRequired(nameField, "nombre completo")) isValid = false;

    const emailField = document.getElementById("email") as HTMLInputElement;
    if (!validateEmail(emailField)) isValid = false;

    // FIX: Documento obligatorio
    const documentField = document.getElementById("document") as HTMLInputElement;
    if (!validateRequired(documentField, "documento")) isValid = false;

    const phoneField = document.getElementById("phone") as HTMLInputElement;
    if (!validatePhone(phoneField)) isValid = false;

    const ageField = document.getElementById("age") as HTMLInputElement;
    if (!validateAge(ageField)) isValid = false;

    const serviceField = document.getElementById(
      "service"
    ) as HTMLSelectElement;
    if (!validateRequired(serviceField, "servicio")) isValid = false;

    const dateField = document.getElementById("date") as HTMLInputElement;
    if (!validateDate(dateField)) isValid = false;

    const timeField = document.getElementById("time") as HTMLSelectElement;
    if (!validateRequired(timeField, "hora")) isValid = false;

    if (!validateRadio("first_visit", "Â¿Es tu primera visita?"))
      isValid = false;

    const termsCheckbox = document.getElementById("terms") as HTMLInputElement;
    if (!validateCheckbox(termsCheckbox)) isValid = false;

    return isValid;
  }

  // ==========================================
  // LÃ“GICA DE FILTRADO DE DENTISTAS
  // ==========================================
  const logicData = document.getElementById("logic-data");
  const serviceToDentists = JSON.parse(logicData?.dataset.relations || "{}");
  const dentistsNames = JSON.parse(logicData?.dataset.names || "{}");
  const businessId = logicData?.dataset.businessId;

  const serviceSelect = document.getElementById("service") as HTMLSelectElement;
  const dentistSelect = document.getElementById("dentist") as HTMLSelectElement;
  const dentistContainer = document.getElementById("dentist-container");

  if (serviceSelect && dentistSelect) {
    serviceSelect.addEventListener("change", () => {
      // FIX: Limpiar error al cambiar
      clearError(serviceSelect);

      const serviceId = serviceSelect.value;
      dentistSelect.innerHTML = '<option value="">Cualquiera disponible</option>';

      if (!serviceId) {
          dentistContainer?.classList.add("opacity-0", "h-0");
          return;
      }
      
      dentistContainer?.classList.remove("opacity-0", "h-0");
      dentistContainer?.classList.add("h-auto");

      const validDentists = serviceToDentists[serviceId] || [];
      validDentists.forEach((dentistId: string) => {
        const opt = document.createElement("option");
        opt.value = dentistId;
        opt.textContent = `Dr/a. ${dentistsNames[dentistId]}`;
        dentistSelect.appendChild(opt);
      });
    });
  }

  // ==========================================
  // LISTENERS EN TIEMPO REAL
  // ==========================================
  const nameField = document.getElementById("name") as HTMLInputElement;
  nameField?.addEventListener("blur", () => validateRequired(nameField, "nombre completo"));
  
  const emailField = document.getElementById("email") as HTMLInputElement;
  emailField?.addEventListener("blur", () => validateEmail(emailField));
  
  // FIX: Documento Listener
  const documentField = document.getElementById("document") as HTMLInputElement;
  documentField?.addEventListener("blur", () => validateRequired(documentField, "documento"));

  const phoneField = document.getElementById("phone") as HTMLInputElement;
  phoneField?.addEventListener("blur", () => validatePhone(phoneField));
  
  const ageField = document.getElementById("age") as HTMLInputElement;
  ageField?.addEventListener("blur", () => validateAge(ageField));
  
  const dateField = document.getElementById("date") as HTMLInputElement;
  dateField?.addEventListener("blur", () => validateDate(dateField));
  
  // FIX: Listeners para selects y radios
  const timeSelect = document.getElementById("time") as HTMLSelectElement;
  timeSelect?.addEventListener("change", () => { if(timeSelect.value) clearError(timeSelect); });

  const firstVisitRadios = document.getElementsByName("first_visit") as NodeListOf<HTMLInputElement>;
  firstVisitRadios.forEach(radio => {
    radio.addEventListener("change", () => {
        const container = document.getElementById("first_visit_container"); 
        const errorMsg = container?.querySelector(".error-message");
        if(errorMsg) errorMsg.classList.add("hidden");
    });
  });

  const termsCheckbox = document.getElementById("terms") as HTMLInputElement;
  termsCheckbox?.addEventListener("change", () => {
    if (termsCheckbox.checked) {
      const errorMsg = termsCheckbox.closest("div")?.parentElement?.querySelector(".error-message");
      if (errorMsg) errorMsg.classList.add("hidden");
    }
  });

  // ==========================================
  // ENVÃO DEL FORMULARIO
  // ==========================================
  const form = document.getElementById("appointment-form") as HTMLFormElement;
  const formMessage = document.getElementById("form-message");

  if (form && formMessage) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      if (!validateForm()) {
        const firstError = document.querySelector(".border-red-500, .error-message:not(.hidden)");
        if (firstError) {
          firstError.scrollIntoView({ behavior: "smooth", block: "center" });
        }
        return;
      }

      const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalText = submitButton.innerHTML;
      submitButton.disabled = true;
      submitButton.innerHTML = "<span>Guardando tu cita...</span>";

      try {
        const formData = new FormData(form);
        const dentistVal = formData.get("dentist_id");
        const dentistId = dentistVal ? dentistVal : null;

        // 1. Obtener nombre del servicio para el correo
        const selectedServiceOption = serviceSelect.options[serviceSelect.selectedIndex];
        const serviceNameClean = selectedServiceOption ? selectedServiceOption.text.split(' - $')[0] : "Consulta General"; 
        
        // 2. Obtener nombre del doctor seleccionado para el correo
        const selectedDentistOption = dentistSelect.options[dentistSelect.selectedIndex];
        const doctorNameClean = (dentistVal && selectedDentistOption) ? selectedDentistOption.text : "Especialista Asignado";
        
        //Direccion
        const businessAddress = logicData?.dataset.businessAddress || '';

        // DATOS DE LA CITA
        const appointmentData = {
          business_id: businessId,
          service_id: formData.get("service_id"),
          dentist_id: dentistId,
          customer_name: formData.get("name"),
          customer_email: formData.get("email"),
          customer_phone: formData.get("phone"),
          appointment_date: formData.get("date"),
          appointment_time: formData.get("time"),
          status: "pending",
          patient_age: formData.get("age") ? parseInt(formData.get("age") as string) : null,
          patient_doc: formData.get("document"),
          is_first_visit: formData.get("first_visit") === "si",
          consultation_reason: formData.get("reason"),
          marketing_source: formData.get("source") || "Web Directa",
          notes: "",
        };

        // 3. GUARDAR EN BD
        const { data, error } = await supabase
          .from("appointments")
          .insert([appointmentData])
          .select();

        if (error) throw error;

        // 4. ðŸ”¥ ENVIAR CORREO (Llamada al Backend con TODOS los datos de marca)
        fetch("/api/send-booking-email", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            // Datos del Paciente
            patientName: formData.get("name"),
            patientEmail: formData.get("email"),
            date: formData.get("date"),
            time: formData.get("time"),
            serviceName: serviceNameClean,
            doctorName: doctorNameClean,
            
            // Datos de la ClÃ­nica (Branding)
            businessName: document.title.replace('Agendar Cita - ', ''),
            brandColor: getComputedStyle(document.body).getPropertyValue('--color-brand'), // Leemos el color del CSS!
            logoUrl: "{business.logo_url}", // Astro inyectarÃ¡ la URL del logo aquÃ­
            businessAddress: businessAddress  // Astro inyectarÃ¡ la direcciÃ³n aquÃ­
          }),
        }).catch(err => console.error("Error enviando email:", err));

        // Ã‰XITO
        formMessage.className = "block p-6 rounded-lg bg-green-50 border-2 border-green-200 text-center mt-6 animate-fade-in";
        formMessage.innerHTML = `
          <svg class="w-12 h-12 text-green-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h3 class="text-xl font-bold text-green-900 mb-2">Â¡Cita agendada exitosamente!</h3>
          <p class="text-green-800">Tu cita ha sido registrada para el <strong>${formData.get("date")}</strong> a las <strong>${formData.get("time")}</strong></p>
          <p class="text-sm text-green-700 mt-4">Te hemos enviado un correo de confirmaciÃ³n. ðŸ“§</p>
          <div class="mt-6">
            <button onclick="window.location.reload()" class="inline-block bg-brand-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-brand-700 transition-colors">
              Agendar otra cita
            </button>
          </div>
        `;
        
        form.reset();
        Array.from(form.children).forEach((child) => {
            if (child.id !== 'form-message') (child as HTMLElement).style.display = 'none';
        });
        
        formMessage.classList.remove('hidden');
        formMessage.scrollIntoView({ behavior: "smooth", block: "center" });

      } catch (error: any) {
        console.error("Error:", error);
        formMessage.className = "block p-6 rounded-lg bg-red-50 border-2 border-red-200 text-center mt-6";
        formMessage.innerHTML = `
          <h3 class="text-xl font-bold text-red-900 mb-2">Hubo un error al agendar</h3>
          <p class="text-red-800 mb-4">${error.message || "Por favor intenta de nuevo o contÃ¡ctanos por WhatsApp."}</p>
        `;
        formMessage.classList.remove('hidden');
      } finally {
        submitButton.disabled = false;
        submitButton.innerHTML = originalText;
      }
    });
  }
</script>