import BookingLayout from "../../layouts/BookingLayout.astro";
import { supabase } from "../../lib/supabase";

// 1. CAPTURAR SLUG Y DATOS DEL NEGOCIO (SSR)
const { slug } = Astro.params;

if (!slug) return Astro.redirect("/404");

// Buscar el negocio especÃ­fico
const { data: business, error } = await supabase
  .from("businesses")
  .select("*")
  .eq("slug", slug)
  .single();

if (error || !business) return Astro.redirect("/404");

// 2. OBTENER SERVICIOS Y DENTISTAS (Filtrados por este negocio)
const { data: services } = await supabase
  .from("services")
  .select("id, name, price")
  .eq("business_id", business.id)
  .eq("is_active", true)
  .order("name");

const { data: dentistRelations } = await supabase
  .from("dentists")
  .select(`id, name, dentist_services(service_id)`)
  .eq("business_id", business.id)
  .eq("is_active", true)
  .order("name");

// 3. LÃ“GICA DE MAPEO
const serviceToDentists: Record<string, string[]> = {};
services?.forEach((s) => (serviceToDentists[s.id] = []));
dentistRelations?.forEach((dentist) => {
  // @ts-ignore
  dentist.dentist_services.forEach((ds: any) => {
    if (serviceToDentists[ds.service_id]) {
      serviceToDentists[ds.service_id].push(dentist.id);
    }
  });
});

const dentistsNames: Record<string, string> = {};
dentistRelations?.forEach((d) => (dentistsNames[d.id] = d.name));

// TelÃ©fono para contacto
const cleanPhone = (phone: string) => phone ? phone.replace(/\D/g, '') : '';
const businessPhone = business.phone || '';
