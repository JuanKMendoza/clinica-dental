    if (!value) {
      showError(phoneField, "El tel√©fono es obligatorio");
      return false;
    }

    // Extraer solo n√∫meros
    const numbers = value.replace(/\D/g, "");
    if (numbers.length < 7) {
      showError(
        phoneField,
        "Por favor ingresa un n√∫mero de tel√©fono v√°lido (m√≠nimo 7 d√≠gitos)"
      );
      return false;
    }

    clearError(phoneField);
    return true;
  }

  /**
   * Valida que la edad est√© en un rango v√°lido
   * @param ageField - Campo de edad a validar
   * @returns true si la edad es v√°lida (opcional)
   */
  function validateAge(ageField: HTMLInputElement): boolean {
    const value = ageField.value.trim();

    // La edad es opcional, si est√° vac√≠a es v√°lido
    if (!value) {
      clearError(ageField);
      return true;
    }

    const age = parseInt(value);
    if (isNaN(age) || age < 1 || age > 120) {
      showError(ageField, "Por favor ingresa una edad v√°lida (1-120 a√±os)");
      return false;
    }

    clearError(ageField);
    return true;
  }

  /**
   * Valida que se haya seleccionado una opci√≥n de radio button
   * @param radioName - Nombre del grupo de radio buttons
   * @param fieldLabel - Etiqueta del campo para el mensaje de error
   * @returns true si hay una opci√≥n seleccionada
   */
  function validateRadio(radioName: string, fieldLabel: string): boolean {
    const radios = document.getElementsByName(
      radioName
    ) as NodeListOf<HTMLInputElement>;
    const isChecked = Array.from(radios).some((radio) => radio.checked);

    if (!isChecked) {
      const firstRadio = radios[0];
      const container = firstRadio.closest("div")?.parentElement;
      const errorMsg = container?.querySelector(".error-message");

      if (errorMsg) {
        errorMsg.textContent = `Por favor selecciona una opci√≥n para ${fieldLabel}`;
        errorMsg.classList.remove("hidden");
      }
      return false;
    }

    // Limpiar error si existe
    const firstRadio = radios[0];
    const container = firstRadio.closest("div")?.parentElement;
    const errorMsg = container?.querySelector(".error-message");
    if (errorMsg) {
      errorMsg.classList.add("hidden");
    }

    return true;
  }

  /**
   * Valida que el checkbox de t√©rminos est√© marcado
   * @param checkbox - Elemento checkbox a validar
   * @returns true si est√° marcado
   */
  function validateCheckbox(checkbox: HTMLInputElement): boolean {
    if (!checkbox.checked) {
      const errorMsg = checkbox
        .closest("div")
        ?.parentElement?.querySelector(".error-message");
      if (errorMsg) {
        errorMsg.textContent =
          "Debes aceptar los t√©rminos y condiciones para continuar";
        errorMsg.classList.remove("hidden");
      }
      return false;
    }

    // Limpiar error
    const errorMsg = checkbox
      .closest("div")
      ?.parentElement?.querySelector(".error-message");
    if (errorMsg) {
      errorMsg.classList.add("hidden");
    }

    return true;
  }

  /**
   * Valida que la fecha no sea anterior a hoy
   * @param dateField - Campo de fecha a validar
   * @returns true si la fecha es v√°lida
   */
  function validateDate(dateField: HTMLInputElement): boolean {
    const value = dateField.value;

    if (!value) {
      showError(dateField, "La fecha es obligatoria");
      return false;
    }

    const selectedDate = new Date(value);
    const today = new Date();
    today.setHours(0, 0, 0, 0);

    if (selectedDate < today) {
      showError(dateField, "La fecha no puede ser anterior a hoy");
      return false;
    }

    clearError(dateField);
    return true;
  }

  /**
   * Valida el formulario completo antes de enviarlo
   * @returns true si todos los campos son v√°lidos
   */
  function validateForm(): boolean {
    let isValid = true;

    // Validar campos de texto obligatorios
    const nameField = document.getElementById("name") as HTMLInputElement;
    if (!validateRequired(nameField, "nombre completo")) isValid = false;

    // Validar email
    const emailField = document.getElementById("email") as HTMLInputElement;
    if (!validateEmail(emailField)) isValid = false;

    // Validar tel√©fono
    const phoneField = document.getElementById("phone") as HTMLInputElement;
    if (!validatePhone(phoneField)) isValid = false;

    // Validar edad (opcional pero debe ser v√°lida si se llena)
    const ageField = document.getElementById("age") as HTMLInputElement;
    if (!validateAge(ageField)) isValid = false;

    // Validar servicio
    const serviceField = document.getElementById(
      "service"
    ) as HTMLSelectElement;
    if (!validateRequired(serviceField, "servicio")) isValid = false;

    // Validar fecha
    const dateField = document.getElementById("date") as HTMLInputElement;
    if (!validateDate(dateField)) isValid = false;

    // Validar hora
    const timeField = document.getElementById("time") as HTMLSelectElement;
    if (!validateRequired(timeField, "hora")) isValid = false;

    // Validar radio button de primera visita
    if (!validateRadio("first_visit", "¬øEs tu primera visita?"))
      isValid = false;

    // Validar checkbox de t√©rminos
    const termsCheckbox = document.getElementById("terms") as HTMLInputElement;
    if (!validateCheckbox(termsCheckbox)) isValid = false;

    return isValid;
  }

  // ==========================================
  // L√ìGICA DE FILTRADO DE DENTISTAS
  // ==========================================

  const logicData = document.getElementById("logic-data");
  const serviceToDentists = JSON.parse(logicData?.dataset.relations || "{}");
  const dentistsNames = JSON.parse(logicData?.dataset.names || "{}");

  const serviceSelect = document.getElementById("service") as HTMLSelectElement;
  const dentistSelect = document.getElementById("dentist") as HTMLSelectElement;

  if (serviceSelect && dentistSelect) {
    serviceSelect.addEventListener("change", () => {
      const serviceId = serviceSelect.value;

      // Limpiar select de dentistas
      dentistSelect.innerHTML =
        '<option value="">Cualquiera disponible</option>';

      if (!serviceId) return;

      // Obtener dentistas v√°lidos para el servicio seleccionado
      const validDentists = serviceToDentists[serviceId] || [];

      // Llenar select con dentistas disponibles
      validDentists.forEach((dentistId: string) => {
        const opt = document.createElement("option");
        opt.value = dentistId;
        opt.textContent = `Dr/a. ${dentistsNames[dentistId]}`;
        dentistSelect.appendChild(opt);
      });
    });
  }

  // ==========================================
  // VALIDACI√ìN EN TIEMPO REAL (OPCIONAL)
  // ==========================================

  // Agregar validaci√≥n en tiempo real cuando el usuario sale del campo
  const nameField = document.getElementById("name") as HTMLInputElement;
  nameField?.addEventListener("blur", () =>
    validateRequired(nameField, "nombre completo")
  );

  const emailField = document.getElementById("email") as HTMLInputElement;
  emailField?.addEventListener("blur", () => validateEmail(emailField));

  const phoneField = document.getElementById("phone") as HTMLInputElement;
  phoneField?.addEventListener("blur", () => validatePhone(phoneField));

  const ageField = document.getElementById("age") as HTMLInputElement;
  ageField?.addEventListener("blur", () => validateAge(ageField));

  const dateField = document.getElementById("date") as HTMLInputElement;
  dateField?.addEventListener("blur", () => validateDate(dateField));

  // Validaci√≥n en tiempo real para el campo de servicio
  const serviceField = document.getElementById("service") as HTMLSelectElement;
  serviceField?.addEventListener("change", () => {
    if (serviceField.value) {
      clearError(serviceField);
    }
  });

  // Validaci√≥n en tiempo real para el campo de hora
  const timeField = document.getElementById("time") as HTMLSelectElement;
  timeField?.addEventListener("change", () => {
    if (timeField.value) {
      clearError(timeField);
    }
  });

  // Validaci√≥n en tiempo real para radio buttons de primera visita
  const firstVisitRadios = document.getElementsByName(
    "first_visit"
  ) as NodeListOf<HTMLInputElement>;
  firstVisitRadios.forEach((radio) => {
    radio.addEventListener("change", () => {
      // Limpiar error cuando se selecciona cualquier opci√≥n
      const container = radio.closest("div")?.parentElement;
      const errorMsg = container?.querySelector(".error-message");
      if (errorMsg) {
        errorMsg.classList.add("hidden");
      }
    });
  });

  // Validaci√≥n en tiempo real para checkbox de t√©rminos
  const termsCheckbox = document.getElementById("terms") as HTMLInputElement;
  termsCheckbox?.addEventListener("change", () => {
    if (termsCheckbox.checked) {
      const errorMsg = termsCheckbox
        .closest("div")
        ?.parentElement?.querySelector(".error-message");
      if (errorMsg) {
        errorMsg.classList.add("hidden");
      }
    }
  });

  // ==========================================
  // ENV√çO DEL FORMULARIO
  // ==========================================

  const form = document.getElementById("appointment-form") as HTMLFormElement;
  const formMessage = document.getElementById("form-message");

  if (form && formMessage) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      // VALIDAR FORMULARIO ANTES DE ENVIAR
      if (!validateForm()) {
        // Hacer scroll al primer error
        const firstError = document.querySelector(".border-red-500");
        if (firstError) {
          firstError.scrollIntoView({ behavior: "smooth", block: "center" });
        }

        // Mostrar mensaje general de error
        formMessage.className =
          "block p-4 rounded-lg bg-red-50 border border-red-200 text-center mt-6";
        formMessage.innerHTML = `
          <p class="text-red-800 font-semibold">‚ö†Ô∏è Por favor completa todos los campos obligatorios correctamente</p>
        `;

        setTimeout(() => {
          formMessage.classList.add("hidden");
        }, 5000);

        return;
      }

      const submitButton = form.querySelector(
        'button[type="submit"]'
      ) as HTMLButtonElement;
      const originalText = submitButton.innerHTML;

      // Mostrar estado de carga
      submitButton.disabled = true;
      submitButton.innerHTML = "<span>Guardando tu cita...</span>";

      try {
        const formData = new FormData(form);

        // Obtener el ID del negocio
        const { data: business } = await supabase
          .from("businesses")
          .select("id")
          .single();

        if (!business) {
          throw new Error("No se pudo obtener informaci√≥n del negocio");
        }

        const dentistVal = formData.get("dentist_id");
        const dentistId = dentistVal ? dentistVal : null;

        // Preparar datos de la cita
        const appointmentData = {
          business_id: business.id,
          service_id: formData.get("service_id"),
          dentist_id: dentistId,
          customer_name: formData.get("name"),
          customer_email: formData.get("email"),
          customer_phone: formData.get("phone"),
          appointment_date: formData.get("date"),
          appointment_time: formData.get("time"),
          status: "pending",
          patient_age: formData.get("age")
            ? parseInt(formData.get("age") as string)
            : null,
          patient_doc: formData.get("document"),
          is_first_visit: formData.get("first_visit") === "si",
          consultation_reason: formData.get("reason"),
          marketing_source: formData.get("source"),
          notes: "",
        };

        // Insertar en Supabase
        const { data, error } = await supabase
          .from("appointments")
          .insert([appointmentData])
          .select();

        if (error) throw error;

        // √âXITO
        formMessage.className =
          "block p-6 rounded-lg bg-green-50 border-2 border-green-200 text-center mt-6 animate-fade-in";
        formMessage.innerHTML = `
          <svg class="w-12 h-12 text-green-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h3 class="text-xl font-bold text-green-900 mb-2">¬°Cita agendada exitosamente!</h3>
          <p class="text-green-800">Tu cita ha sido registrada para el <strong>${formData.get("date")}</strong> a las <strong>${formData.get("time")}</strong></p>
          <p class="text-sm text-green-700 mt-4">Te contactaremos en m√°ximo 2 horas para confirmar. Revisa tu email y WhatsApp üì±</p>
          <div class="mt-6">
            <a href="/" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700">
              Volver al inicio
            </a>
          </div>
        `;

        form.reset();
        formMessage.scrollIntoView({ behavior: "smooth", block: "center" });
      } catch (error: any) {
        console.error("Error:", error);

        // ERROR
        formMessage.className =
          "block p-6 rounded-lg bg-red-50 border-2 border-red-200 text-center mt-6";
        formMessage.innerHTML = `
          <h3 class="text-xl font-bold text-red-900 mb-2">Hubo un error al agendar</h3>
          <p class="text-red-800 mb-4">${error.message || "Por favor intenta de nuevo o cont√°ctanos por WhatsApp."}</p>
          <a href="https://wa.me/573102278592" target="_blank" class="inline-block bg-green-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-600">
            üí¨ Abrir WhatsApp
          </a>
        `;
      } finally {
        submitButton.disabled = false;
        submitButton.innerHTML = originalText;
      }
    });
  }
</script>
