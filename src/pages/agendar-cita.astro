  /**
   * Muestra un error en un campo espec√≠fico
   * @param field - Elemento del campo a marcar como error
   * @param message - Mensaje de error a mostrar
   */
  function showError(field: HTMLElement, message: string) {
    // Resaltar el campo con borde rojo
    field.classList.add("border-red-500", "border-2");
    field.classList.remove("border-gray-300");

    // Mostrar mensaje de error
    const errorMsg = field.parentElement?.querySelector(".error-message");
    if (errorMsg) {
      errorMsg.textContent = message;
      errorMsg.classList.remove("hidden");
    }
  }

  /**
   * Limpia los errores de un campo
   * @param field - Elemento del campo a limpiar
   */
  function clearError(field: HTMLElement) {
    field.classList.remove("border-red-500", "border-2");
    field.classList.add("border-gray-300");

    const errorMsg = field.parentElement?.querySelector(".error-message");
    if (errorMsg) {
      errorMsg.classList.add("hidden");
    }
  }

  /**
   * Valida que un campo no est√© vac√≠o
   * @param field - Campo a validar
   * @param fieldName - Nombre del campo para el mensaje de error
   * @returns true si es v√°lido, false si est√° vac√≠o
   */
  function validateRequired(
    field: HTMLInputElement | HTMLSelectElement,
    fieldName: string
  ): boolean {
    const value = field.value.trim();
    if (!value) {
      showError(field, `El campo ${fieldName} es obligatorio`);
      return false;
    }
    clearError(field);
    return true;
  }

