  </section>

  <!-- Servicios Completos -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        {services.map((service) => (
          <div 
            id={service.id}
            class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden hover:shadow-2xl transition-shadow"
          >
            <!-- Header del servicio -->
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 text-white p-8">
              <div class="flex items-center justify-between mb-4">
                <span class="text-6xl">{service.icon}</span>
                <span class="text-4xl font-bold">${service.price.toLocaleString()}</span>
              </div>
              <h2 class="text-3xl font-bold mb-2">{service.name}</h2>
              <p class="text-blue-100">{service.description}</p>
            </div>

            <!-- Contenido del servicio -->
            <div class="p-8">
              
              <!-- Beneficios -->
              {service.benefits && (
                <div class="mb-8">
                  <h3 class="font-bold text-lg text-gray-900 mb-4">Beneficios:</h3>
                  <ul class="space-y-3">
                    {service.benefits.map((benefit) => (
                      <li class="flex items-start space-x-3">
                        <svg class="w-6 h-6 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        <span class="text-gray-700">{benefit}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              <!-- Duraci칩n -->
              {service.duration && (
                <div class="mb-8">
                  <div class="flex items-center space-x-3 text-gray-700">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span><strong>Duraci칩n:</strong> {service.duration}</span>
                  </div>
                </div>
              )}

              <!-- Procedimiento -->
              {service.procedure && (
                <div class="mb-8">
                  <h3 class="font-bold text-lg text-gray-900 mb-4">Procedimiento:</h3>
                  <p class="text-gray-700 leading-relaxed">{service.procedure}</p>
                </div>
